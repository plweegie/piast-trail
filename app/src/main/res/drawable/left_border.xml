<?xml version="1.0" encoding="UTF-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle" >
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimary" />
            <solid
                android:color="#00FFFFFF" />
        </shape>
    </item>
    
    <item
        android:left="3dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#FFFAFAFA" />
            <solid
                android:color="#00FFFFFF" />
        </shape>
    </item>
    
</layer-list>
        

